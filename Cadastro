def cadastrar_dados():
    nome = input("Digite o nome: ")
    endereco = input("Digite o endereço: ")
    with open("dados.txt", "a") as arquivo:
        arquivo.write(f"{nome};{endereco}\n")
    print("Dados cadastro com sucesso!")
    
    
def ler_dados():
    try:
        with open("dados.txt", "r") as arquivo:
            print("Lista de dados cadastro:")
            for linha in arquivo:
                dados = linha.strip().strip(';')
                if len (dados) == 2:
                    nome, endereco = dados
                    print(f"Nome {nome}, Endereço: {endereco}")
                else:
                    print("Erro ao ler linha do arquivo:", linha)
    except FileNotFoundError:
        print("Nenhum dado cadastro ainda.")
        
        
def main():
    while True:
        print("\n===== Menu de Opções =====")
        print("1. Cadastrar dados")
        print("2. Ler dados cadastrados")
        print("3. Sair")
        
        opcao = input("Escola uma opção")
